{
  "name": "ait-bot",
  "version": "1.0.0",
  "types": "dist/index.d.ts",
  "description": "MicroClub IT Section Bot",
  "main": "dist/index.js",
  "scripts": {
    "pm2": "pm2 start ecosystem.config.json",
    "start": "npm run build && pm2 start ecosystem.config.json",
    "start:node": "node dist/index.js",
    "start:bun": "bun dist/index.js",
    "dev:ts": "nodemon src/index.ts",
    "bun:ts": "bun src/index.ts",
    "clean": "rimraf -i dist",
    "compile": "tsc",
    "build": "npm run clean && npm run compile",
    "build:node": "npm run clean && npm run compile && npm run start:node",
    "build:bun": "npm run clean && npm run compile && npm run start:bun",
    "format": "prettier --write src/**/*.ts",
    "lint:check": "eslint . --ext .ts --ignore-path .gitignore",
    "lint:fix": "npm run lint:check -- --fix"
  },
  "keywords": [],
  "author": "y.abderrahmane",
  "license": "MIT",
  "dependencies": {
    "@discordjs/voice": "^0.17.0",
    "@google/generative-ai": "^0.14.1",
    "@napi-rs/canvas": "^0.1.53",
    "axios": "^1.7.2",
    "chalk": "^4.1.2",
    "cheerio": "^1.0.0-rc.12",
    "discord.js": "^14.15.2",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "figlet": "^1.7.0",
    "moment": "^2.30.1",
    "mongoose": "^8.3.4",
    "node-schedule": "^2.1.1",
    "tweetnacl": "^1.0.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/figlet": "^1.5.8",
    "@types/node": "^20.12.11",
    "@types/node-schedule": "^2.1.7",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "bun": "^1.1.17",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.0",
    "rimraf": "^5.0.7",
    "typescript": "^5.5.2"
  }
}
